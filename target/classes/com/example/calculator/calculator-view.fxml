<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculator.Controller">

    <StackPane alignment="CENTER">
        <Rectangle width="240" height="50"  fill="WHITE"/>
        <Text fx:id="output"/>
    </StackPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="7" prefWidth="50" />
        <Button text="8" prefWidth="50" />
        <Button text="9" prefWidth="50" />
        <Button text="/" prefWidth="50" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="4" prefWidth="50" />
        <Button text="5" prefWidth="50" />
        <Button text="6" prefWidth="50" />
        <Button text="*" prefWidth="50" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="1" prefWidth="50" />
        <Button text="2" prefWidth="50" />
        <Button text="3" prefWidth="50" />
        <Button text="-" prefWidth="50" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="0" prefWidth="110" />
        <Button text="=" prefWidth="50"  />
        <Button text="+" prefWidth="50"  />
    </HBox>

</VBox>
